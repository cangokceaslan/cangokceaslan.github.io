@font-face {
    font-family: '{{ fontName }}';
    src: {{{ src }}};
    font-weight: normal;
    font-style: normal;
}

.icon {
    font-family: '{{ fontName }}' !important;
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    line-height: 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

{{# each codepoints }}
$icon-{{ @key }}: '\\{{ this }}';
.{{ @key }}:before {
    content: $icon-{{ @key }};
}

{{/ each }}
